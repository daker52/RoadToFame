{
    "name": "wasteland/dominion",
    "description": "Post-apokalyptická strategická webová hra s multiplayerem",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Developer",
            "email": "dev@wasteland-dominion.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.5",
        "twig/twig": "^3.0",
        "doctrine/dbal": "^3.6",
        "ramsey/uuid": "^4.7",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WastelandDominion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WastelandDominion\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src",
        "cs-check": "phpcs src",
        "cs-fix": "phpcbf src",
        "serve": "php -S localhost:8000 -t public",
        "migrate": "php database/migrate.php",
        "seed": "php database/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}